{
    "version": 2,
    "builds": [{
        "src": "bookmyseat/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "bookmyseat/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "bookmyseat.settings",
        "PYTHONPATH": "."
    }
}
